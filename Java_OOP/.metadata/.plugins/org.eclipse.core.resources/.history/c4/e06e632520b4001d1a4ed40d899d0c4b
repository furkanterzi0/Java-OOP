import javax.swing.*;

public class Program {

	public static void main(String[] args) {
		JFrame f=new JFrame();
		JProgressBar pb=new JProgressBar(0,2000);
		pb.setBounds(40,40,160,30);
		pb.setValue(0);

		
		
		
		
		
		f.add(pb);
		f.setSize(400,400);
		f.setLayout(null);
		f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		f.setVisible(true);

	}

}
